{
  "mcpServers": {
    "shadcn": {
      "command": "npx",
      "args": ["shadcn@latest", "mcp"]
    },
    "playwright": {
      "command": "npx",
      "args": [
        "@playwright/mcp@latest",
        "--browser",
        "chrome",
        "--headless=false",
        "--user-data-dir",
        "/home/exbald/.playwright-profile"
      ]
    },
    "next-devtools": {
      "command": "npx",
      "args": ["-y", "next-devtools-mcp@latest", "--user-data-dir", "/home/exbald/.playwright-profile"]
    }
  }
}
